#include<iostream>
using namespace std;

int main(){
     int n;
     cin>>n; 
    int i=1;

   while(i<=n){

        //  First digit triangle
       int j=1;
       while(j<=n-i+1){
           cout<<j;
           j++; 
        }

         // First Star triangle pattern
    int star=i-1;
    while(star){
        cout<<"*";
        star--;
    }
    
        // Second star triangle pattern
    int star2=i-1;
    while(star2){
        cout<<"*";
        star2--;
    }
         // Second digit triangle
    int end=n-i+1;
    while(end){
        cout<<end;
        end--;
    }

       cout<<endl;
       i++; 
   }

return 0;
}
